
<div class="page-header">
  <h2>Report file: <%= params[:filename] %></h2>
  <p>Directory: <span class="label label-default"><%= Dir.pwd %></span></p>
  <p>
    <a href="/snode">Back</a> |
    <a href="/snode/report/<%=params[:filename]%>/raw">Raw</a> |
    <a href="/snode/report/<%=params[:filename]%>/config">Config</a> |
    Target list |
    <a href="/snode/report/<%=params[:filename]%>/results">Results</a>
  </p>
</div>

<div class="row">
  <div class="col-sm-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Target list <span class="badge"><%= @data[:groups][0][:targets].size.to_s%></span></h3>
      </div>
      <div class="panel-body">
<!--             <div class="col-md-6">-->
        <table class="table table-condensed">
          <thead>
            <tr>
              <td><span class="label label-default">ID</span></td>
              <td><span class="label label-default">Description</span></td>
              <td><span class="label label-default">Score/Weight</span></td>
            </tr>
          </thead>
          <tbody>
            <% @data[:groups][0][:targets].each do |target| %>
              <tr>
                <td><span class="label label-default"><%= target[:target_id].to_s %></span></td>
                <td><%= target[:description] %></td>
                <td><%= target[:score] %>/ <%= target[:weight] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
<!--             </div>-->

      </div>
    </div>
  </div>
</div>
