
<div class="page-header">
  <h2>Show: <%= @test[:dirpath] %></h2>
  <p><a href="/tnode">Back</a> |
     Show |
     <a href="/tnode/execute/<%= @test[:id] %>/raw">Execute</a>
  </p>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Test files <span class="badge"><%= @test[:files].size.to_s%></span></h3>
      </div>
      <div class="panel-body">
<!--             <div class="col-md-6">-->
        <table class="table table-condensed">
          <tbody>
            <% @test[:files].each do |filepath| %>
            <tr>
            <%   if File.basename(filepath) == 'start.rb' %>
              <td>
                <a href="/tnode/raw/<%=f2s(filepath)%>">
                  <span class="label label-primary"><%=filepath%></span>
                </a>
              </td>
            <% else %>
              <td><a href="/tnode/raw/<%=f2s(filepath)%>"><%=filepath%></a></td>
            <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
<!--             </div>-->

      </div>
    </div>
  </div>
</div>
