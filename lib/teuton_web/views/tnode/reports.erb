
<div class="page-header">
  <h2>Reports: <%= @test[:dirpath] %></h2>
  <p><a href="/tnode">Back</a> |
     <a href="/tnode/files/<%= @test[:id] %>">Files</a> |
     <a href="/tnode/cases/<%= @test[:id] %>">Cases</a> |
     Reports |
     <a href="/tnode/resume/<%= @test[:id] %>">Resume</a> |
     <a href="/tnode/params/<%= @test[:id] %>">Params</a>
  </p>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Output reports <span class="badge"><%=@reports[:files].size.to_s%> files</span></h3>
      </div>
      <div class="panel-body">
        <table class="table table-condensed">
          <tbody>
            <% list = {}
               @reports[:files].each do |filepath|
                 i = { filename: File.basename(filepath),
                            filepath: filepath }
                 s = i[:filename][0,7]
                 if list[s].nil?
                   list[s] = [i]
                 else
                   list[s] << i
                 end
               end %>
            <% list.each_value do |items| %>
            <tr>
              <% items.each do |item| %>
              <td>
              <a href="/tnode/raw/<%=f2s(item[:filepath])%>"><%=item[:filename]%></a>
              </td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
