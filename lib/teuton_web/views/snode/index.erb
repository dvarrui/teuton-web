
<div class="page-header">
  <h2>S-Node</h2>
  <p><b>Directory:</b> <span class="label label-default"><%= Dir.pwd %></span></p>
  <p>Choose report file...</p>
</div>

<div class="row">
  <div class="col-sm-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Report files <span class="badge"><%= @list.size.to_s%></span></h3>
      </div>
      <div class="panel-body">
<!--             <div class="col-md-6">-->
        <table class="table table-condensed">
          <thead>
            <tr>
              <td></td>
              <td><span class="label label-default">Filename</span></td>
              <td><span class="label label-default">Grade</span></td>
              <td><span class="label label-default">Timestamp</span></td>
            </tr>
          </thead>
          <tbody>
            <% @list.each do |item| %>
              <tr>
              <% if item[:show] %>
                <td><a href="/snode/report/<%=item[:filename]%>/targets">
                  <span class="label label-primary">Select</span></a>
                </td>
              <% else %>
                <td></td>
              <% end %>
              <% if item[:link] %>
                <td>
                  <a href="/snode/report/<%=item[:filename]%>/raw">
                    <b><%=item[:filename]%></b></a>
                </td>
                <td><span class="badge"><%=item[:grade]%></span></td>
                <td><%= item[:timestamp] %></td>
              <% else %>
                <td><%= item[:filename] %></td>
                <td></td>
                <td></td>
              <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
<!--             </div>-->

      </div>
    </div>
  </div>
</div>
